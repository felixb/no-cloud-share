<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="de.ub0r.android.nocloudshare.AboutActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/about_margin_top"
                android:text="@string/about_text"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_version"/>

        <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:layout_marginBottom="@dimen/about_margin_top"
                android:text="v0.0.0"
                tools:ignore="HardcodedText"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_author"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:layout_marginBottom="@dimen/about_margin_top"
                android:autoLink="email"
                android:text="@string/about_author_value"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_license"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:layout_marginBottom="@dimen/about_margin_top"
                android:autoLink="web"
                android:text="@string/about_license_value"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_website"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:layout_marginBottom="@dimen/about_margin_top"
                android:autoLink="web"
                android:text="@string/about_website_value"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_oos_libs"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:autoLink="web"
                android:text="@string/about_oos_libs_value_1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:autoLink="web"
                android:text="@string/about_oos_libs_value_2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:autoLink="web"
                android:text="@string/about_oos_libs_value_3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:autoLink="web"
                android:text="@string/about_oos_libs_value_4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/about_margin_left"
                android:layout_marginStart="@dimen/about_margin_left"
                android:autoLink="web"
                android:text="@string/about_oos_libs_value_5"/>

    </LinearLayout>
</ScrollView>