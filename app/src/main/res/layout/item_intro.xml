<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@android:id/icon"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/intro_0"
            android:contentDescription="@string/intro_description"/>

    <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/intro_padding"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/step_num"/>

    <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/intro_padding"
            android:layout_marginBottom="@dimen/intro_padding"
            android:layout_gravity="center_horizontal"
            android:text="help help help"
            tools:ignore="HardcodedText"/>

</LinearLayout>